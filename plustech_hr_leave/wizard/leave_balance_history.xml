<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_leave_balance_history" model="ir.ui.view">
        <field name="name">Leave Balance Report at Date</field>
        <field name="model">leave.balance.history</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <group>
                        <field name="employee_id"/>
                        <field name="balance_date"/>
                    </group>
                </group>
                <footer>
                    <button name="open_at_date" string="Confirm" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
