<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit employee form to add biometric device id field -->
        <record id="hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="pin" position="before">
<!--                    <field name="biometric_device_name"/>-->
                    <field name="biometric_device_id" invisible="1"/>
                    <field name="attendance_device_id"/>
                </field>
            </field>
        </record>

          <record model="ir.ui.view" id="hr_employee_inherit_tree_view_attendance">
            <field name="name">hr.employee.tree.view.attendance</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="attendance_device_id" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
