<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Training TimeOff-->
        <record id="holiday_status_training_leave" model="hr.leave.type">
            <field name="name">Training Leave</field>
            <field name="requires_allocation">no</field>
            <field name="leave_validation_type">no_validation</field>
            <field name="color_name">lavender</field>
            <field name="calculation_type">working_days</field>
            <field name="request_unit">hour</field>
            <field name="allow_credit">False</field>
            <field name="is_annual_leave">False</field>
            <field name="responsible_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>